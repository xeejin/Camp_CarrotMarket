<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/iv_itemImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_radius"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample6" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/nanumgothic"
        android:maxLines="2"
        android:text="프라다 복조리백"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_itemImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/nanumgothic"
        android:text="수원시 영통구 원천동"
        android:textColor="#878787"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/iv_itemImage"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name" />

    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/nanumgothic"
        android:text="50,000원"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/iv_itemImage"
        app:layout_constraintTop_toBottomOf="@id/tv_item_address" />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chatCount"
        app:layout_constraintEnd_toStartOf="@+id/tv_chatCount"
        app:layout_constraintTop_toTopOf="@+id/tv_chatCount"
        app:srcCompat="@drawable/pic_chat" />

    <TextView
        android:id="@+id/tv_chatCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_heart_unclicked"
        app:layout_constraintEnd_toStartOf="@id/iv_heart_unclicked"
        app:layout_constraintTop_toTopOf="@+id/iv_heart_unclicked" />

    <ImageView
        android:id="@+id/iv_heart_unclicked"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_heartCount"
        app:layout_constraintEnd_toStartOf="@id/tv_heartCount"
        app:layout_constraintTop_toTopOf="@+id/tv_heartCount"
        app:srcCompat="@drawable/pic_heart" />

    <TextView
        android:id="@+id/tv_heartCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EAEAEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>